<% if logged_in_and_registered? && !mine?(@person) %>
    <% if current_user.person.is_friends_with?(@person.id) %>
        <li><%= image_tag_for_key('destroy', remove_friendship_person_path(@person), nil, {:method=>:delete}, "Unfriend") -%></li>
    <% elsif current_user.person.is_awaiting_friendship_response?(@person.id) %>
        <li><%= image_tag_for_key('destroy', remove_friendship_person_path(@person), nil, {:method=>:delete}, "Cancel Friendship Request") -%></li>
    <% elsif current_user.person.has_friend_request_from?(@person.id) %>
        This person wants to be your mate
        <%= form_tag :action => :accept_friendship_request do %>
            <%= submit_tag "Accept Friendship", :disable_with => "Accepting Friend..." -%>
        <% end %>
    <% else %>
        <%= form_tag :action => :make_friendship_request do %>
            <%= submit_tag "Request Friendship", :disable_with => "Sending Request ..." -%>
        <% end %>
    <% end %>
<% end %>